.module__about-fucts
  background: url('../images/background/5.jpg') no-repeat center;
  background-size cover
  padding 80px 0
  position relative
  overflow: hidden
  text-align: center
  
  h2 
    opacity 0

  +before('')
    background: rgba(255,255,255,.88);
    width 100%
    height 100% 
    top 0px 
    left 0px
    position: absolute
    z-index: 0
    trs()
    
  &__item
    flex-grow 1
    text-align: center
    opacity: 0
    
  &__items
    z-index 1
    position: relative
    column-count 4
    text-align: center
    
    p 
      font-size 108px 
      black()
      color $dark
      padding-top 40%
      
    span 
      font-size 24px
      black()
      color $dark
      text-transform uppercase
      +before('')
        display: block
        width 50px 
        background: $dark
        height 2px
        margin 60px auto 35px auto