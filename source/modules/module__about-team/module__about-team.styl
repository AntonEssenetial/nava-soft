.module__about-team
  background: $dark
  text-align: center
  
  &__content 
    padding 100px
  
  h2 
    color white
    font-size 52px
    opacity 0
    light()
    display: block
    
    span 
      color white
      black()
      font-size 52px
    
  span 
    color white

  &__str 
    +after()
      background: white
      
  &__img 
    width 100%
    display: block
    height auto
    
  &__item 
    opacity 0
    
  &__item:hover &__layer__content 
    display: block
    
  &__item:hover &__layer 
    opacity 1
    trs()

  &__layer
    position: absolute 
    top 0px 
    left 0px 
    background: rgba(28, 29, 29, 0.87);
    width 100% 
    height 100%
    width 100%
    padding 100px
    text-align left
    opacity 0
    
  &__name 
    font-size 24px
    color white 
    black()
    text-transform: uppercase
    display: block
    
  &__prof 
    font-size 21px 
    color white 
    opacity: 0.8
    black()
    text-transform uppercase
    display: block
    position: absolute
    bottom 0px
    p 
      padding 0px 
      color white
    
  &__layer__content 
    position: relative
    height 100%
    display: none