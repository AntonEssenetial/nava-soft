mixin module__about-top(data)
  - var bemClass = 'module__about-top'
  section.module__about-top.jsHeight.jsBg&attributes(attributes)
    div(class=bemClass + '__content') 
      div(class=bemClass + '__item') 
        each item in data
          span(class=bemClass + '__str').jsAnim.animated= item.title
          h2.jsHover.jsAnim.animated2= item.name
          if (item.sub !== false)
            div(class=bemClass + '__tel').jsHover
              a(href="mailto:info@navatsoft.com").jsAnim.animated2 info@navatsoft.com 
              a(href="tel:18988889999").jsAnim.animated2 +1 898 888 9999
    div(class=bemClass + '__scroll') 
      span(class=bemClass + '__str-2').jsScroll Scroll