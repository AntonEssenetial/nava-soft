.module__about-top
  background: url('../images/background/4.jpg') no-repeat center;
  background-size cover
  position: relative
  text-align: center
  display flex 
  flex-direction column
  overflow hidden

  +before('')
    background: rgba(0, 47, 109, 0.9);
    width 100%
    height 100% 
    top 0px 
    left 0px
    position: absolute
    z-index: 0
    trs()
    
  &__content 
    margin auto 
    z-index 1
    position: relative
    
  h2 
    font-size 72px
    black()
    opacity: 0
    color white
    span 
      font-size 52px 
      black()
      opacity 0
      
  &__scroll
    position absolute
    bottom 0px
    text-align: center
    width 100%
    z-index 1
    opacity 0.5
    &:hover 
      opacity 1
    
  &__str-2
    color white 
    font-size 21px 
    black()
    display: block
    width 100px
    margin 0 auto
    text-transform: uppercase
    opacity: 0.5
    cursor pointer
    animation-duration: 1s;
    animation-delay: 1.8s;
    animation-fill-mode: both;
    animation-name fadeInUp
    trs()
    +after('')
      height 50px 
      width 2px 
      margin 50px auto 0 auto
      display: block
      background: white
      animation-duration: 1s;
      animation-delay: 2.2s;
      animation-fill-mode: both;
      animation-name fadeInUp
    &:hover 
      opacity 1
      trs()
      
  &__str 
    opacity 0
    text-transform: uppercase
    black()
    color white
    font-size 24px
    +after('')
      width 50px 
      height 2px 
      display: block
      margin 40px auto
      background-color: white
      animation-duration: 1s;
      animation-delay: .5s;
      animation-fill-mode: both;
      animation-name zoomIn
      
  &__item 
    max-width 997px
    margin 0 auto
    
.module__about-top.jsWhite 
  +before()
    background: white
    trs()
  
  .module__about-top__str
  .module__about-top__str-2
    color $dark
    +after()
      background: $dark
      

  
    
