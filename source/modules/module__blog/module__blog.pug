include ../icon/icon

mixin module__blog(data)
  - var bemClass = 'module__blog'
  section.module__blog&attributes(attributes)
    div(class=bemClass + '__row').row 
      .col__50(class=bemClass + '__item__content') 
        img(src=config.path.images + '/blog/1.jpg' , alt="", class=bemClass + '__img')
        div(class=bemClass + '__item').module__blog__item_absolute
          span(class=bemClass + '__date') 05.10.2017
          a(href='single-page.html' class=bemClass + '__link') Nominated for Webby Award for Best Association
          a(href='singel-page.html' class=bemClass + '__more') More 
      .col__50
        .row
          .col__50
            img(src=config.path.images + '/blog/2.jpg' , alt="", class=bemClass + '__img')
          .col__50
            div(class=bemClass + '__item').module__blog__item_padding 
              span(class=bemClass + '__date') 05.10.2017
              a(href='single-page.html' class=bemClass + '__link') Navat Soft Launches New Economic Devel..
              a(href='singel-page.html' class=bemClass + '__more') More 
        div(class=bemClass + '__twitter')
          +icon('twitter')
          p The Association of Marketing and Communication Professionals (AMCP) recognized DigitalUs for outstanding achievement with the FDF site.
          a(href="") http://efirmedia.com
    div(class=bemClass + '__all').row.center-c
      a(href="") View all articles