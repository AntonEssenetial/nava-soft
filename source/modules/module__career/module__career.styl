.module__contact
  
  &__str 
  h2
    opacity: 1
  
  &__str-1
    font-size 30px 
    text-transform: uppercase
    black()
    color $dark
    
  &__str__row
    flex 1
    span 
      flex-basis 42%
    
  &__career
    padding-top 40px
    
  &__item
    padding 70px 100px
    cursor pointer
    transition .3s ease-in-out
  
    &:nth-child(odd)
      background: #fafafa
    
    &:hover 
      background: #f5f5f5
      transition .3s ease-in-out
      span
        transition .3s ease-in-out
