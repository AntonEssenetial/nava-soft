.module__grid
  
  &__img 
    width 100%
    display: block
  
  &__item 
    position: relative
    opacity 0
    overflow: hidden
    
  &__item_blue 
    padding 50px
    opacity 0
    trs()
    &:hover 
      background: rgba(48, 48, 48, 0.93) !important
      trs()
    
  &__item:hover &__layer 
    opacity 1 
    trs()
    
  &__item:hover &__cat
  &__item:hover &__name 
    display: block
    
  &__layer 
    position: absolute
    top 0px 
    left 0px 
    width 100%
    height @width
    padding 50px
    background: rgba(48, 48, 48, 0.93)
    opacity 0
    trs()
  
  &__cat 
    color white 
    black()
    font-size 21px
    text-transform: uppercase
    display: none
    +after('')
      display: block
      width 50px 
      height 2px
      background: white
      margin 40px 0 35px 0
    
  &__name 
    display: none
    black()
    color white
    font-size 56px
    text-transform uppercase
    line-height 70px
    
  &__column 
    display flex 
    flex-direction column
    width 50%
  
  &__column:last-child &__item:last-child
    background: $blue
    flex 1
    
    .module__grid__name
    .module__grid__cat
      display: block