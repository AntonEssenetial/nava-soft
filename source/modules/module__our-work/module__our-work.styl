.module__our-work
  background: url('../images/slider/2.jpg') no-repeat center;
  background-size cover
  position: relative
  text-align: center
  display flex 
  flex-direction column
  overflow hidden
  +before('')
    background: rgba(255, 255, 255, 0.88)
    width 100%
    height 100% 
    top 0px 
    left 0px
    position: absolute
    z-index: 0
    trs()
    
  &__content 
    margin auto 
    z-index 1
    position: relative
    
  h2 
    font-size 52px
    light()
    opacity: 0
    span 
      font-size 52px 
      black()
      opacity 0
      
  &__str 
    opacity 0
    text-transform: uppercase
    black()
    color $dark
    font-size 24px
    +after('')
      width 50px 
      height 2px 
      display: block
      margin 40px auto
      background-color: $dark
      animation-duration: 1s;
      animation-delay: .5s;
      animation-fill-mode: both;
      animation-name zoomIn
      
  &__item 
    max-width 997px
    margin 0 auto
    
.module__our-work.jsWhite 
  +before()
    background: rgba(0, 0, 0, 0.82);
    trs()
  
  h2,
  h2 span,
  .module__our-work__str 
    color white 
    
  .module__our-work__str
    +after()
      background-color: white
  
    