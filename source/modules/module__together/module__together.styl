.module__together
  background: url('../images/background/3.jpg') no-repeat center;
  background-size cover
  position: relative
  text-align: center
  display flex 
  flex-direction column
  overflow hidden
  padding 300px 0
  +before('')
    background: rgba(255, 255, 255, 0.88)
    width 100%
    height 100% 
    top 0px 
    left 0px
    position: absolute
    z-index: 0
    trs()
    
  &__content 
    margin auto 
    z-index 1
    position: relative
    
  h2 
    font-size 100px
    black()
    line-height 120px
    opacity: 0
    margin-bottom 80px
    letter-spacing 5px

  span
    font-size 24px
    text-transform: uppercase
    black()
      
  &__item 
    max-width 997px
    margin 0 auto
    
.module__together.jsWhite 
  +before()
    background: rgba(0, 0, 0, 0.82);
    trs()
  
  h2,
  span
    color white 
    
  
      
    