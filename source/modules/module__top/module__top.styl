.module__top
  position: relative
    
  &__content 
    position: relative
    z-index 1
    display flex 
    flex-direction column
    height 100%
    text-align: center
  
  &__slider 
    margin auto
    
  &__scroll
    position absolute
    bottom 0px
    text-align: center
    width 100%
    z-index 1
    
  &__str-2
    color white 
    font-size 21px 
    black()
    display: block
    width 100px
    margin 0 auto
    text-transform: uppercase
    opacity: 0.5
    cursor pointer
    animation-duration: 1s;
    animation-delay: 1.8s;
    animation-fill-mode: both;
    animation-name fadeInUp
    trs()
    +after('')
      height 50px 
      width 2px 
      margin 50px auto 0 auto
      display: block
      background: white
      animation-duration: 1s;
      animation-delay: 2.2s;
      animation-fill-mode: both;
      animation-name fadeInUp
    &:hover 
      opacity 1
      trs()
      
.jsWhite 
  .module__top-slider__slide
    +before()
      background: white 
      trs()
  
  .module__top-slider__str
  .module__top__str-2
    color $dark 
    opacity 1
    +after()
      background @color