include ../injected/injected
include ../head/head
include ../scripts/scripts
include ../../helpers/variables


mixin page(data) 
    body.page&attributes(attributes)
      
      +injected: block

      .page__wrapper

        //- Header
        +if('header')
          +use('header')

        main.main

          //- Main page 
          +if('page__main')
            +use('page__main')

          //- Blog
          +if('page__blog')
            +use('page__blog')

          //- About
          +if('page__about')
            +use('page__about')

        //- Footer
        +if('footer')
          +use('footer')
  
        //- Noti
        +if('module__notification')
          +use('module__notification')

      +scripts()
      //- +popup()
      //- +notification()