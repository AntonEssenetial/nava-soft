+width-max(660px)
  .module__about-slider__nav
    width 100%
    padding 0 20px
  .module__about-team__item
    width 50%
  .module__about-fucts__item
    width 50%
  .module__about-fucts__items
    flex-wrap wrap
  .main-menu,
  .footer__row > span,
  .module__blog__img 
    display: none
  .footer__row
    justify-content: center;
  .module__together h2
    font-size 46px 
    line-height 60px
  .module__blog__item__content,
  .module__blog__item
    width 100%
  .module__blog__link, 
  .module__blog__twitter p
    margin 20px 0
    padding 0px
  .module__blog__row
  .module__blog__row .row
    flex-direction column
    background: white
    .col__50 
      width 100%
  .module__blog__item_absolute
    position: relative
  .module__blog__item
    margin-bottom 20px
    height auto
  .module__blog__item__content
    background: white
  .sandwitch 
    display: block
  .main-menu__item_active a 
    color white !important
    +before()
      background: white !important
  .main-menu.active
    animation-duration: .3s;
    animation-delay: 0s;
    display: flex
    position absolute
    top 70px 
    background: $dark
    z-index: 111
    width 100%
    left 0px
    text-align: center
    ul 
      top: -30px;
      position: relative;
      margin auto
    .row 
      flex-direction column
    a 
      margin 4px 0
      font-size 30px
      &:hover 
        color white
  .header 
    position: fixed;
    top: 0px;
    width: 100%;
    left: 0px;
    z-index: 11;
    background: white;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.2)
  .page__wrapper
    margin-top: 70px;
  
    

