+width-max(1430px)
  .module__blog__link, 
  .module__blog__twitter p
    height 70px
    

+width-max(1240px)
  .module__blog__item_absolute, 
  .module__blog__twitter,
  .module__blog__item_padding
    padding 20px
      

+width-max(1100px)
  .module__blog__row,
  .module__grid__row
    flex-direction column
    > .col__50, 
    .module__grid__column
      width 100%
  .module__about-us__item,
  .module__our-work__item
    max-width 100% 
  .module__blog__link, 
  .module__blog__twitter p
    height auto
  .slick-prev, 
  .slick-next
    display: none !important
  h2,
  .module__about-us__str-2
    padding 0 20px
  .module__category
    padding 90px 0
  .module__category::after
    top 8.6%
    left: 55%;
  .module__grid__cat,
  .module__grid__name
    display: block
  .module__grid__name
    font-size 30px
    line-height 40px
  .module__grid__layer
    opacity: 1
    background: rgba(25, 25, 25, 0.67);
    padding 20px
  .module__grid__item_blue
    padding 20px
  .module__grid__cat::after
    margin 16px 0 10px 0
  .module__about-team__layer
    padding 20px
  .module__about-nava__post
    column-count 1
    span 
      margin 0 0 40px 0
  .module__about-nava__post span::before
    margin 0 20px 0px 0
    

